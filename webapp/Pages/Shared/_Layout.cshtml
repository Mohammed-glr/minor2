<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webapp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="bg-white border-b shadow-sm mb-3">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-xl font-semibold text-gray-800 hover:text-gray-600" asp-area="" asp-page="/Index">webapp</a>
                    </div>
                    
                    <!-- Desktop Navigation -->
                    <div class="hidden sm:flex sm:items-center sm:space-x-8">
                        <a class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-page="/Index">Home</a>
                        <a class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-page="/Opdrachten/Opdracht1">Opdracht 1</a>
                        <a class="text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-page="/Opdrachten/Opdracht2">Opdracht 2</a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="sm:hidden flex items-center">
                        <button type="button" id="mobile-menu-button" class="text-gray-800 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="Toggle navigation">
                            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Mobile Navigation -->
                <div id="mobile-menu" class="sm:hidden hidden">
                    <div class="px-2 pt-2 pb-3 space-y-1">
                        <a class="block text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-page="/Index">Home</a>
                        <a class="block text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-page="/Opdrachten/Opdracht1">Opdracht 1</a>
                        <a class="block text-gray-800 hover:text-gray-600 px-3 py-2 rounded-md text-base font-medium" asp-area="" asp-page="/Opdrachten/Opdracht2">Opdracht 2</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <main role="main" class="pb-12">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 text-gray-500 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
              &copy; 2025 - webapp
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Simple mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>